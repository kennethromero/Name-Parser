<Window x:Class="Name_Parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Name_Parser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblInstructions" Content="LastName, FirstName, MiddleName" HorizontalAlignment="Left" Height="27" Margin="71,30,0,0" VerticalAlignment="Top" Width="239"/>
        <TextBox x:Name="txtFullname" HorizontalAlignment="Left" Height="21" Margin="71,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="239"/>
        <Label x:Name="lblLastname" Content="Lastname:" HorizontalAlignment="Left" Height="26" Margin="66,172,0,0" VerticalAlignment="Top" Width="239"/>
        <Label x:Name="lblFirstName" Content="FirstName:" HorizontalAlignment="Left" Height="25" Margin="66,116,0,0" VerticalAlignment="Top" Width="239"/>
        <Label x:Name="lbnMiddleName" Content="MiddleName:" HorizontalAlignment="Left" Height="26" Margin="66,141,0,0" VerticalAlignment="Top" Width="239"/>
        <Button x:Name="btnCalculate" Content="Click Me" HorizontalAlignment="Left" Height="27" Margin="217,223,0,0" VerticalAlignment="Top" Width="88" Click="btnCalculate_Click"/>

    </Grid>
</Window>
